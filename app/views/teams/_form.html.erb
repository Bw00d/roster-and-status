


  <div class="panel panel-default devise-bs center-block">
    <div class="panel-heading">
      <h4><%= t('.sign_up', default: "Team Info") %></h4>
    </div>
    <div class="panel-body">
    <%= form_with(model: team, local: true) do |form| %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, id: :team_name, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :complexity %>
        <%= form.select :complexity, [['Type 1', 'Type 1'], ['Type 2', 'Type 2']], {prompt: "SET TYPE"}, { id: "team-complexity", class: "form-control" } %>
      </div>

      <div class="field">
        <%= form.label(:aapl, "IC") %>
        <%= form.text_field :ic, id: :team_ic, class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label(:aapl,"Deputy IC") %>
        <%= form.text_field :deputy_ic, id: :team_deputy_ic, class: "form-control" %>
      </div>
      
      <div class="field">
        <%= form.label(:aapl,"Lead PIO") %>
        <%#= form.collection_select :lead, User.all, :id, :first_name, class: "form-control" %>
        <%= form.select :lead, options_for_select(User.all.collect { | user | [user.full_name, user.id] }), {prompt: "CHOOSE LEAD"}, {class: "form-control"} %>
      </div>

      <div class="field">
        <%= form.label :status %>
        <%= form.select :status, [['Up On Ration', 'Up On Ration'], ['Available', 'Available'], ['Unavailable', 'Unavailable'], ['Assigned', 'Assigned']], {prompt: "SET STATUS"}, { id: "team-status", class: "form-control" } %>
      </div>

      <div class="field if-assigned">
        <%= form.label :location %>
        <%= form.text_field :location, id: :team_location, class: "form-control" %>
      </div>

      <div class="field if-assigned">
        <%= form.label :incident %>
        <%= form.text_field :incident, id: :team_incident, class: "form-control" %>
      </div>

      
      <%= form.label "Status Dates" %>
      <div class="row">
        
        <div class="field col-xs-6">
          <%= form.text_field :date_up, id: :team_date_up, :data => {:provide => "datepicker"}, class: "form-control", placeholder: "START DATE" %>
          <!-- <span class="input-group-addon">to</span> -->
        </div>
        <div class="field col-xs-6">
          <%= form.text_field :date_down, id: :team_date_down, :data => {:provide => "datepicker"}, class: "form-control", placeholder: "END DATE" %>
          
        </div>
      </div>
      </br>


      <div class="actions">
        <%= form.submit "SUBMIT", class: "btn btn-info" %>
      </div>
    <% end %>

      </div>
    </div>


