
<div id="team-index">
    
  <% @teams.each do |team| %>
    <%= link_to team_path(team) do %>
      <div class="col-lg-8 center-block">
        <div class="panel panel-default devise-bs center-block">
          <div class="panel-heading ">
            <h1 id="team-name"><strong><%= team.name %></strong><span class="float-right regular-text"><%= team.status %></span></h1>
          </div>
          <div class="panel-body">
            <% if team.date_up %>
              <div class="float-right inline"><%= team.date_up.try(:strftime,'%b %e') %> - <%= team.date_down.try(:strftime,'%b %e, %Y') %></div>
            <% end %>
            <div>IC –  <%= team.ic %>, Deputy –  <%= team.deputy_ic %></div>
            <div>Primary –  <%= team.get_lead %></div>
            <% if !team.shares.empty?  %>
              <div>Shared  –  <%= team.display_shared %></div>
            <% end %>
            <% if team.status == "Assigned" %>
              <div>Location  –  <%= team.location %></div>
              <div>Incident  –  <%= team.incident %></div>
            <% end %>
            
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="col-lg-8 center-block">
    <div class="panel panel-default devise-bs center-block">
      <div class="panel-heading ">
        <h1 id="team-name">Trainees</h1>
      </div>
     <div class="panel-body">
      <div><strong>Type 1</strong></div>
        <% type_1_teams.each do |t|  %>
          <div><%= t.display_trainees %></div>
        <% end %>
      <div><strong>Type 2</strong></div>
        <% type_2_teams.each do |t|  %>
          <div><%= t.display_trainees %></div>
        <% end %>
     </div>
    </div>
  </div>

  <div class="col-lg-8 center-block">
    <div class="panel panel-default devise-bs center-block">
      <div class="panel-heading ">
        <h1 id="team-name">Alternate Leads</h1>
      </div>
     <div class="panel-body">
      <div><strong>Type 1 Team</strong></div>
        <% type_1_teams.each do |t|  %>
          <div><%= t.display_alternates %></div>
        <% end %>
         
          
      <div><strong>Type 2 Teams</strong></div>
        <% type_2_teams.each do |t|  %>
          <div><%= t.display_alternates %></div>
        <% end %>
     </div>
    </div>
  </div>

  <% if current_user.admin?  %>
    <div class="col-lg-8 center-block">
      <%= link_to 'New Team', new_team_path, class: 'btn btn-info tiny' %>
    </div>
  <% end %>

